<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Specialty</th>
      <th>Undergraduate university</th>
      <th>Specialty university</th>
      <th>Birth date</th>
      <th>Email</th>
      <th>Visit cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.doctor_id %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.lastname %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.undergraduate_university %></td>
        <td><%= doctor.specialty_university %></td>
        <td><%= doctor.birth_date %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.visit_cost %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

